resource aws_s3_bucket
    bucker = "the-nice-bucket-for-running-state"
#    lifecycle {prevent_destroy = true}

resource aws_s3_bucket_versioning
    bucket =   ...id
    versioning_configuration {status = "Enabled"}

resource aws_dynamodb_table{
    name = "terra_lock"
    billing_mode = "PAY_PER_REQUEST"
    hash_key = "LockID"
    attribute {
        name = "LockID"
        type  = "S"
    }
}

# this block will not work untill you created the bucket, dynamdb .. before applying this.
terraform{
    backend "s3" {
        bucket = "thebucketname"
        key = "dev/terraform.tfstate"   # just a path inside the bucket and file name
        region = "us-east-1"

        dynamodb_table = "terra_lock"
        encrypt =  true
    }
}

    
